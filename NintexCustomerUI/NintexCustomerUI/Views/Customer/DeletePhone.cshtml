@using NintexCustomerUI.Models
@model CustomerPhone
@{
    ViewData["Title"] = "Delete Phone Deatils";
}

<h2>Delete Phone</h2>

@Html.ActionLink("Back To Details", "Detail", new { id = Model.Cust_ID })
@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.Cust_Phone_ID)
    @Html.HiddenFor(model => model.Cust_ID)
    <div class="form-horizontal">
        <div>
            <table>
                <tr>
                    <td>
                        Phone Number :
                    </td>
                    <td>
                        @Html.EditorFor(model => model.Phone_Number)
                    </td>
                </tr>
                <tr>
                    <td>
                        Is Active :
                    </td>
                    <td>
                        @Html.EditorFor(model => model.Active)
                    </td>
                </tr>
            </table>
        </div>
        <div>
            <div>
                <input type="submit" value="Delete" class="btn btn-default" />
            </div>
        </div>
    </div>
}

